<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Core.App.Aprobacion.Views.LoadingPage"
             Title="Cargando">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout
                    Padding="20">
                    <Image
                        Source="Icon-App-83.5x83.5@2x">
                    </Image>
                    <Label                    
                        HorizontalTextAlignment="Center"
                        FontAttributes="Bold"
                        TextColor="Black"
                        Text="Cargando"
                        HorizontalOptions ="Center"
                    ></Label>
                    <ActivityIndicator
                        IsRunning="True"
                        VerticalOptions="CenterAndExpand">
                    </ActivityIndicator>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>